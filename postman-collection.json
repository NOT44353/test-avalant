  },
  "item": [
    {
      "name": "Challenge 1: Data Processing",
      "item": [
        {
          "name": "Seed Data",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dev/seed?users=50000&orders=500000&products=10000",
              "host": ["{{baseUrl}}"],
              "path": ["dev", "seed"],
              "query": [
                {"key": "users", "value": "50000"},
                {"key": "orders", "value": "500000"},
                {"key": "products", "value": "10000"}
              ]
            }
          }
        },
        {
          "name": "Get Users (Paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users?page=1&pageSize=50&sortBy=name&sortDir=asc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"],
